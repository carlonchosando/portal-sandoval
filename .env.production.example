# ====================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN
# Portal Sandoval - Portainer Deployment
# ====================================

# CONFIGURACIÓN DE LA BASE DE DATOS POSTGRESQL
POSTGRES_DB=portal_sandoval_prod
POSTGRES_USER=portal_admin
POSTGRES_PASSWORD=TU_CONTRASEÑA_SUPER_SEGURA_AQUI

# CONFIGURACIÓN DE DJANGO
# ¡IMPORTANTE! Genera una nueva SECRET_KEY para producción
# Puedes usar: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-GENERA_UNA_NUEVA_CLAVE_SECRETA_AQUI

# MODO DEBUG - SIEMPRE False en producción
DEBUG=False

# HOSTS PERMITIDOS - Cambia esto por tu dominio real
DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,localhost,127.0.0.1

# ====================================
# CONFIGURACIÓN DEL USUARIO ADMINISTRADOR
# ¡IMPORTANTE! Cambia estas credenciales por las tuyas
# ====================================
DJANGO_SUPERUSER_USERNAME=tu_usuario_admin
DJANGO_SUPERUSER_EMAIL=tu_email@dominio.com
DJANGO_SUPERUSER_PASSWORD=tu_contraseña_super_segura

# CONFIGURACIÓN DE PUERTOS (opcional, usa los por defecto si no especificas)
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432
HTTP_PORT=80
HTTPS_PORT=443

# URL DE LA API PARA EL FRONTEND
# Cambia esto por la URL real de tu servidor
REACT_APP_API_URL=http://tu-servidor:8000

# ====================================
# CONFIGURACIONES ADICIONALES OPCIONALES
# ====================================

# EMAIL (para notificaciones de Django)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contraseña-de-aplicacion

# CONFIGURACIONES DE SEGURIDAD ADICIONALES
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
